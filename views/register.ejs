<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/register.css">
</head>

<body>
<%- include('includes/navigation.ejs') %>

<div class="text-center">

    <form class="form-signin" action="/register" method="POST">

        <img class="mb-4" src="images/big_logo.png" alt="" width="100"
             height="100">

        <% if(emailExist === true){ %>
            <div class="alert alert-danger">
                <strong>Error: </strong> Account with this email already exists.
            </div>
        <% } %>

        <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>

        <div class="form-group">
            <label for="fname_input" class="sr-only">First name</label>
            <input class="form-control first_input" type="text" pattern="[A-Za-z]{1,}"
                   name="fname_input" placeholder="First name" required autofocus>

            <label for="lname_input" class="sr-only">Last name</label>
            <input type="text" class="form-control middle_input"
                   name="lname_input" placeholder="Last name" required>

            <label for="email_input" class="sr-only">Email address</label>
            <input class="form-control last_input" type="email"
                   pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
                   name="email_input" placeholder="Enter email" required>
        </div>

        <button type="submit" class="btn btn-lg btn-primary btn-block">Sign up</button>
        <p class="mt-5 mb-3 text-muted">&copy; Avish & Nati 2020</p>
    </form>
</div>




<%- include('includes/end.ejs') %>