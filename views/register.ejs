<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>

<div class="text-center">

    <form class="form-signin" action="/register" method="POST">

        <img class="mb-4" src="/images/big_logo.png" alt="" width="100"
             height="100">

        <% if(emailExist === true){ %>
            <div class="alert alert-danger">
                Account with this email already exists. Please try a different email
            </div>
        <% } %>

        <% if(timeOut === true){ %>
            <div class="alert alert-danger">
                Please enter the password within one minute of registration
            </div>
        <% } %>

        <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>

        <div class="form-group">
            <label for="fname_input" class="sr-only">First name</label>
            <input class="form-control first_input" type="text" pattern="[A-Za-z]{1,}"
                   name="firstName" placeholder="First name" required autofocus>

            <label for="lname_input" class="sr-only">Last name</label>
            <input type="text" class="form-control middle_input"
                   name="lastName" placeholder="Last name" required>

            <label for="email_input" class="sr-only">Email address</label>
            <input class="form-control last_input" type="email"
                   pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,4}$"
                   name="email" placeholder="Enter email" required>
        </div>

        <button type="submit" class="btn btn-lg btn-primary btn-block">Sign up</button>
    </form>
    <div class="my-4">
        <p>
            Already have an account? &nbsp;
            <a href="/login" class="">Sign in</a>
        </p>
    </div>
    <p class="mt-5 mb-3 text-muted">&copy; Avish & Nati 2020</p>
</div>




<%- include('includes/end.ejs') %>